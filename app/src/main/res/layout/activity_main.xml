<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="24dp"
        android:drawableTop="@drawable/castle"
        android:fontFamily="sans-serif-black"
        android:text="Welcome to Hogwarts"
        android:textAlignment="center"
        android:textColor="@color/gryffindor"
        android:textFontWeight="600"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnListarPersonagem"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#750000"
        android:text="Search character by ID"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:icon="@drawable/account_star"
        app:iconGravity="end"
        app:iconSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnListarProfessor"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#919E0000"
        android:text="View professors"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        app:icon="@drawable/account_tie_woman"
        app:iconGravity="end"
        app:iconSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnListarPersonagem" />

    <Button
        android:id="@+id/btnListarEstudantes"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#E73737"
        android:text="View students"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:cornerRadius="16dp"
        app:icon="@drawable/account_school"
        app:iconGravity="end"
        app:iconSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnListarProfessor" />

    <Button
        android:id="@+id/btnVerFeiticos"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#490000"
        android:text="View spells"
        android:textAlignment="textStart"
        android:textSize="16sp"
        app:cornerRadius="16dp"
        app:icon="@drawable/auto_fix"
        app:iconGravity="end"
        app:iconPadding="8dp"
        app:iconSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnListarEstudantes" />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:width="0dp"
        android:height="32sp"
        android:background="@android:color/transparent"
        android:drawablePadding="0dp"
        android:paddingStart="0dp"
        android:paddingTop="4dp"
        android:paddingEnd="0dp"
        android:paddingBottom="4dp"
        android:text="Exit"
        android:textAlignment="textEnd"
        android:textColor="#682A2A"
        android:textSize="16sp"
        android:typeface="sans"
        app:cornerRadius="8dp"
        app:icon="@drawable/logout"
        app:iconGravity="end"
        app:iconTint="#710000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>